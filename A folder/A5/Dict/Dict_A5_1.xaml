    <Style x:Key="Sector_1" TargetType="{x:Type Button}">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Button}">
                    <Grid>
                        <ed:Arc x:Name="Sector_btn_1" ArcThickness="90" ArcThicknessUnit="Pixel" EndAngle="60" Fill="#FFC75757" Stretch="None" Stroke="Gray" StrokeThickness="5" StartAngle="-60"/>
                        <ContentPresenter HorizontalAlignment="Stretch" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Top" Margin="75,36.38,75,0" Content="{DynamicResource _A5_1_05_b}"/>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True"/>
                        <Trigger Property="IsDefaulted" Value="True"/>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Fill" TargetName="Sector_btn_1" Value="Gray"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Fill" TargetName="Sector_btn_1" Value="LightGray"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False"/>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>   
    
    <Style x:Key="Sector_2" TargetType="{x:Type Button}">
        <Setter Property="Focusable" Value="False"/>
        <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <ed:Arc x:Name="Sector_2" ArcThickness="90" ArcThicknessUnit="Pixel" EndAngle="180" Fill="#FF1B1914" Stretch="None" Stroke="Gray" StrokeThickness="5" StartAngle="60"/>
                            <ContentPresenter HorizontalAlignment="Left"  RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="Bottom" Margin="135,0,0,72.38" Content="{DynamicResource _A5_1_05_c}" RenderTransformOrigin="0.5,0.5">
